<Window x:Class="PresentationTier.InsertProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationTier"
        mc:Ignorable="d"
        Title="Insert products" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="297*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="ProductCodeTextBox" HorizontalAlignment="Left" Height="23" Margin="25,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="ProductCodeTextBox__TextChanged"/>
        <TextBox x:Name="ProductNameTextBox" HorizontalAlignment="Left" Height="23" Margin="25,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="ProductNameTextBox_TextChanged"/>
        <ComboBox x:Name="CategorieComboBox" HorizontalAlignment="Left" Height="23" Margin="25,140,0,0" Text="" VerticalAlignment="Top" Width="120" SelectionChanged="CategorieComboBox_SelectionChanged">
            <ComboBoxItem x:Name="_1" Content="" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="_2" Content="" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="_3" Content="" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem x:Name="_4" Content="" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <TextBox x:Name="DimentionsTextBox" HorizontalAlignment="Left" Height="23" Margin="25,180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="DimentionsTextBox_TextChanged"/>
        <TextBox x:Name="ProductProviderTextBox" HorizontalAlignment="Left" Height="23" Margin="25,220,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="SuplierTextBox_TextChanged"/>
        <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" Height="23" Margin="25,260,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="DescriptionTextBox_TextChanged"/>
        <TextBox x:Name="StockTextBox" HorizontalAlignment="Left" Height="23" Margin="25,300,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="StockTextBox_TextChanged"/>
        <TextBox x:Name="SalePriceTextBox" HorizontalAlignment="Left" Height="23" Margin="25,340,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="SellPriceTextBox_TextChanged"/>
        <TextBlock x:Name="InsertProductTextBlock" HorizontalAlignment="Left" Margin="4,5,0,0" TextWrapping="Wrap" Text="Insert Products" VerticalAlignment="Top" Height="50" Width="300" TextAlignment="Center" FontWeight="Bold" FontSize="30" Grid.ColumnSpan="2" />
        <TextBox x:Name="BuyPriceTextBox" HorizontalAlignment="Left" Height="23" Margin="25,380,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="BuyPriceTextBox_TextChanged" />
        <TextBlock x:Name="textBlock_BuyPrice_alert" HorizontalAlignment="Left" Margin="196,380,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="0"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="20,100,0,0" TextWrapping="Wrap" Text="Product name" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="90"/>
        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="20,140,0,0" TextWrapping="Wrap" Text="Categorie" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="90"/>
        <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="20,180,0,0" TextWrapping="Wrap" Text="Dimentions" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="90"/>
        <TextBlock x:Name="textBlock_Copy3" HorizontalAlignment="Left" Margin="20,220,0,0" TextWrapping="Wrap" Text="Product Suplier" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="90"/>
        <TextBlock x:Name="textBlock_Copy4" HorizontalAlignment="Left" Margin="20,260,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="90"/>
        <TextBlock x:Name="textBlock_Copy5" HorizontalAlignment="Left" Margin="20,300,0,0" TextWrapping="Wrap" Text="Stock" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="90"/>
        <TextBlock x:Name="textBlock_Copy6" HorizontalAlignment="Left" Margin="20,340,0,0" TextWrapping="Wrap" Text="Sale price" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="90"/>
        <TextBlock x:Name="textBlock_Copy7" HorizontalAlignment="Left" Margin="20,380,0,0" TextWrapping="Wrap" Text="Buy price" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="90"/>
        <TextBlock x:Name="messageTextBlock" Grid.Column="1" HorizontalAlignment="Left" Margin="120,420,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontWeight="Bold" Height="16" Width="0"/>
        
        <TextBlock x:Name="textBlock_SalePrice_alert" HorizontalAlignment="Left" Margin="196,340,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="0"/>
        <TextBlock x:Name="textBlock_Stock_alert" HorizontalAlignment="Left" Margin="196,300,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="0"/>
        <TextBlock x:Name="textBlock_Product_Code" HorizontalAlignment="Left" Margin="20,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="90"><Run Text="Product "/><Run Text="code"/></TextBlock>
        <Button x:Name="buttonInsertProduct" Content="Insert" HorizontalAlignment="Left" Margin="25,0,0,60" VerticalAlignment="Bottom" Width="100" Click="ButtonInsertProduct_Click" Height="20"/>
        <Button x:Name="Button_Show_List" Content="Show List" HorizontalAlignment="Left" Margin="150,20,0,467" Width="100" Height="20" Click="Button_Show_List_Click" Grid.Column="1"/>
        <Button x:Name="Button_Back" Height="20" Width="100" Margin="26,458,0,26" HorizontalAlignment="Left" Content="Back" Click="Button_Back_Click"/>
    </Grid>
</Window>
