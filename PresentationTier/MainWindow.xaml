<Window x:Class="PresentationTier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationTier"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">
    <!-- Height="450" Width="800" -->
    <Grid>
        <DataGrid x:Name="dataGrid_showInfo" ItemsSource="{Binding}" Margin="10,100,10,10" SelectionChanged="DataGrid_showInfo_SelectionChanged"/>
        <TextBox x:Name="textBox_Test" HorizontalAlignment="Left" Height="23" Margin="41,56,0,0" TextWrapping="Wrap" Text="Updated on date: MM/dd/yyyy HH:mm:ss" VerticalAlignment="Top" Width="230"/>
        <Button x:Name="button_Modify" Content="Modify" HorizontalAlignment="Left" Margin="585,55,0,0" VerticalAlignment="Top" Width="75" Click="Button_Modify_Click"/>
        <Button x:Name="button_Delete" Content="Delete" HorizontalAlignment="Left" Margin="665,55,0,0" VerticalAlignment="Top" Width="75" Click="Button_Delete_Click"/>

    </Grid>
</Window>
